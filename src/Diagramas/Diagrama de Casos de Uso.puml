actor Usuario
actor Administrador

rectangle "Tocador de Música" {
    Usuario -- (Buscar Música)
    Usuario -- (Reproduzir Música)
    Usuario -- (Criar Playlist)
    Usuario -- (Adicionar Música à Playlist)
    Usuario -- (Remover Música da Playlist)
    Usuario -- (Explorar Playlists)
